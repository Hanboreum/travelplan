<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.all_in_won">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyTheme">
        <service
            android:name=".ExchangeRatesService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".ExcelService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".DeviceBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".AlarmService"
            android:enabled="true"
            android:exported="true" />

        <receiver
            android:name=".AlarmReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>

        <activity
            android:name=".MakeBudgetActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".AddExpensesActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".DetailsActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:launchMode="singleTask" />
        <activity
            android:name=".MainView"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Call.Calmain"/>
        <activity android:name=".Todo.Todomain"/>
        <activity android:name=".MainActivity"/>


    </application>

</manifest>