<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableRow_detail_of_usage"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:onClick="showAddExpensesActivity">

    <TextView
        android:id="@+id/text_expenseID"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text=""
        android:textColor="#0000"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_name_of_detail_of_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용내역"
            android:textSize="20dp"
            android:textStyle="bold"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/text_category_of_detail_of_usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:textSize="16dp"
            android:singleLine="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_amount_of_detail_of_usage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" "
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_currency_of_detail_of_usage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center|left"
            android:paddingRight="10dp"
            android:text=" USD"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/text_WON_amount_of_detail_of_usage"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:paddingLeft="16dp"
            android:gravity="center|right"
            android:text="0"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text=" 원"
            android:textSize="18dp"
            android:textStyle="bold"
            android:paddingRight="16dp"/>

    </LinearLayout>

</TableRow>